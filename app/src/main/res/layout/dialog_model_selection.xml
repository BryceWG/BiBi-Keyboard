<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/model_guide_message"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <!-- SiliconFlow Free Service Option Card (Recommended) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSiliconFlowFree"
            style="@style/DialogSelectionCard"
            android:checked="true">

            <LinearLayout
                style="@style/DialogCardContent">

                <TextView
                    style="@style/DialogCardTitle"
                    android:text="@string/model_guide_option_sf_free" />

                <TextView
                    style="@style/DialogCardDesc"
                    android:text="@string/model_guide_option_sf_free_desc" />

                <TextView
                    style="@style/DialogCardAction"
                    android:text="@string/model_guide_option_sf_free_action" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Local Model Option Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLocalModel"
            style="@style/DialogSelectionCard"
            android:checked="false">

            <LinearLayout
                style="@style/DialogCardContent">

                <TextView
                    style="@style/DialogCardTitle"
                    android:text="@string/model_guide_option_local" />

                <TextView
                    style="@style/DialogCardDesc"
                    android:text="@string/model_guide_option_local_desc" />

                <TextView
                    style="@style/DialogCardAction"
                    android:text="@string/model_guide_option_local_action" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Online Model Option Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardOnlineModel"
            style="@style/DialogSelectionCard">

            <LinearLayout
                style="@style/DialogCardContent">

                <TextView
                    style="@style/DialogCardTitle"
                    android:text="@string/model_guide_option_online" />

                <TextView
                    style="@style/DialogCardDesc"
                    android:text="@string/model_guide_option_online_desc" />

                <TextView
                    style="@style/DialogCardAction"
                    android:text="@string/model_guide_option_online_action" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
